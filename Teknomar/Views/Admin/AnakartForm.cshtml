@model Teknomar.Models.EntityFramework.AnakartUrunler
@{
    ViewBag.Title = "AnakartForm";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

@{
    List<SelectListItem> AnakartMarka = new List<SelectListItem>();
    AnakartMarka.Add(new SelectListItem{Text = "Gigabyte", Value = "Gigabyte"});
    AnakartMarka.Add(new SelectListItem{Text = "MSI", Value = "MSI",});
    AnakartMarka.Add(new SelectListItem{Text = "Asus", Value = "Asus"});

    List<SelectListItem> AnakartUyumluluk = new List<SelectListItem>();
    AnakartUyumluluk.Add(new SelectListItem { Text = "Intel", Value = "Intel" });
    AnakartUyumluluk.Add(new SelectListItem { Text = "AMD", Value = "AMD", });

    List<SelectListItem> AnakartYapi = new List<SelectListItem>();
    AnakartYapi.Add(new SelectListItem { Text = "ATX", Value = "ATX" });
    AnakartYapi.Add(new SelectListItem { Text = "Micro ATX", Value = "Micro ATX", });

    List<SelectListItem> AnakartIslemciSoketTipi = new List<SelectListItem>();
    AnakartIslemciSoketTipi.Add(new SelectListItem { Text = "Soket AM4", Value = "Soket AM4" });
    AnakartIslemciSoketTipi.Add(new SelectListItem { Text = "Soket 1151", Value = "Soket 1151", });

    List<SelectListItem> AnakartRamTipi = new List<SelectListItem>();
    AnakartRamTipi.Add(new SelectListItem { Text = "DDR3", Value = "DDR3" });
    AnakartRamTipi.Add(new SelectListItem { Text = "DDR4", Value = "DDR4", });

    List<SelectListItem> AnakartChipSeti = new List<SelectListItem>();
    AnakartChipSeti.Add(new SelectListItem { Text = "AMD® X370", Value = "AMD® X370" });
    AnakartChipSeti.Add(new SelectListItem { Text = "AMD® B350", Value = "AMD® B350", });
    AnakartChipSeti.Add(new SelectListItem { Text = "Intel® B250", Value = "Intel® B250" });
    AnakartChipSeti.Add(new SelectListItem { Text = "Intel® Z270", Value = "Intel® Z270", });

    List<SelectListItem> AnakartRamSlotSayisi = new List<SelectListItem>();
    AnakartRamSlotSayisi.Add(new SelectListItem { Text = "2", Value = "2" });
    AnakartRamSlotSayisi.Add(new SelectListItem { Text = "4", Value = "4", });
}







